CLS
PRINT STRING$(20, "=")
INPUT TAB(10); "Masukkan hari(1-7): ", Hari
PRINT STRING$(20, "=")
PRINT ""
IF Hari = 1 THEN
PRINT TAB(10); "Anda Memilih Hari Senin"
ELSEIF Hari = 2 THEN
PRINT TAB(10); "Anda Memilih Hari Selasa"
ELSEIF Hari = 3 THEN
PRINT TAB(10); "Anda Memilih Hari Rabu"
ELSEIF Hari = 4 THEN
PRINT TAB(10); "Anda Memilih Hari Kamis"
ELSEIF Hari = 5 THEN
PRINT TAB(10); "Anda Memilih Hari Jumat"
ELSEIF Hari = 6 THEN
PRINT TAB(10); "Anda Memilih Hari Sabtu"
ELSEIF Hari = 7 THEN
PRINT TAB(10); "Anda Memilih Hari Minggu"
ELSE
PRINT "Error: Salah Menginput Data"
END IF
PRINT STRING$(20, "=")
END
